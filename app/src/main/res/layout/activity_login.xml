<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_gradiant_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/BadelhaHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="56dp"
            android:fontFamily="@font/bilbo_swash_caps"
            android:text="Badelha"
            android:textColor="@color/white"
            android:textSize="56dp" />

        <LinearLayout
            android:id="@+id/email_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/BadelhaHeader"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/email_login"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_at"
                app:tint="#E8DB7D"
                android:textSize="33dp" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="266dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="username"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/password_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_linear"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_login"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/password_icon"
                android:textSize="33dp"
                app:tint="#E8DB7D" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="266dp"
                android:layout_height="36dp"
                android:layout_below="@id/password_login"
                android:layout_marginLeft="20dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="16dp" />

        </LinearLayout>


        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_linear"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/login_buttons_style"
            android:fontFamily="@font/istok_web"
            android:onClick="login"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_to_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_buttons_style"
            android:fontFamily="@font/istok_web"
            android:textStyle="bold"
            android:onClick="register"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24dp"
 />

        <Button
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_to_register_button"
            android:layout_marginLeft="118dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/istok_web"
            android:background="@drawable/login_buttons_style"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:text="Credits"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>