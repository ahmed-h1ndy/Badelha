<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottom_bar">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:id="@+id/home_page_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:text="home"
            android:layout_marginTop="14dp"></Button>

        <Button
            android:id="@+id/request_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_request"
            android:text="ÙŒRequests"
            android:textColor="@color/black"
            android:textSize="8dp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_add_box"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:id="@+id/new_button"
            android:textSize="8dp"
            android:text="Add"
            android:layout_marginTop="14dp"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_user"
            android:id="@+id/profile_button"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="8dp"
            android:text="profile"
            android:layout_marginTop="14dp"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_exit"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:id="@+id/logout_button"
            android:textSize="8dp"
            android:text="logout"
            android:layout_marginTop="14dp"></Button>

    </LinearLayout>

</FrameLayout>