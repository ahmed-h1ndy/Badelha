<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.badellha.Home_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#474448"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="190">
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:id="@+id/products_grid">
        </GridLayout>

    </ScrollView>
    <fragment
        android:id="@+id/f2"
        android:name="com.example.badellha.bottom_bar"
        tools:layout="@layout/fragment_bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        </LinearLayout>










